<resources>
    <!-- Base application theme. -->
    <style name="Theme.Carrots" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_2</item>
        <item name="colorPrimaryVariant">@color/orange_3</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#D7C24910</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Carrots.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/varela</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Carrots.CardBottom" parent="Theme.Carrots">
        <item name="background">@color/orange_2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Carrots.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/orange_3</item>
        <item name="fontFamily">@font/varela</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>